set background=dark
set encoding=UTF-8
" mapping for get system clipboard to vim
set clipboard+=unnamedplus
set hidden
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile
set noerrorbells
set number
set relativenumber
set ignorecase
set smartcase
set nohlsearch
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set incsearch
set updatetime=50
set shortmess+=c
set scrolloff=8
set signcolumn=yes
set completeopt=menuone,noinsert,noselect
